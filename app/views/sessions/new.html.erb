<div class="login-form">
  <% if flash[:alert] %>
    <p id="notice">
      <%= flash[:alert] %>
    </p>
  <% end %>
  <%= form_tag({ action: 'create' }, {class: 'form-horizontal'}) do %>
    <fieldset>
      <legend>Please Log In</legend>
      <div class="form-group">
        <%= label_tag :email, "E-mail", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field_tag :email, params[:email], class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Senha", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= password_field_tag :password, params[:password], class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= button_tag type: "submit", class: "btn btn-sm btn-success" do %>
            <span class="glyphicon glyphicon-log-in"></span> Entrar
          <% end %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
