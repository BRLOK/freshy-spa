.page-header
  h1 Visualizando usuário

form.form-horizontal
  .form-group
    .col-md-12.text-right
      .btn-group
        = link_to users_path, class: "btn btn-sm btn-default" do
          span.glyphicon.glyphicon-list-alt
          | Lista
        - if policy(@user).update?
          = link_to edit_user_path(@user), class: "btn btn-sm btn-warning" do
            span.glyphicon.glyphicon-pencil
            | Editar

  .form-group
    label.col-md-2.control-label Nome
    .col-md-10
      p.form-control-static
        = @user.name
  .form-group
    label.col-md-2.control-label E-mail
    .col-md-10
      p.form-control-static
        = @user.email
  .form-group
    label.col-md-2.control-label Perfil
    .col-md-10
      p.form-control-static
        = @user.role
  .form-group
    label.col-md-2.control-label Habilitações
    .col-md-10
      p.form-control-static
        = @user.services
  .form-group
    label.col-md-2.control-label Ativo?
    .col-md-10
      p.form-control-static
        = @user.active

  .form-group
    .col-md-12.text-right
      .btn-group
        = link_to users_path, class: "btn btn-sm btn-default" do
          span.glyphicon.glyphicon-list-alt
          | Lista
        - if policy(@user).update?
          = link_to edit_user_path(@user), class: "btn btn-sm btn-warning" do
            span.glyphicon.glyphicon-pencil
            | Editar
